@model ShoppingAssignment_SE151263.Pages.OrderDetails.DeleteModel

@{
    ViewData["Title"] = "Delete order detail";
    Console.WriteLine("Toi la nguoi phan quyen!");
    if (HttpContext.Session.GetString("EmailAdmin") == null)
    {
        Console.WriteLine("User chua login!");
        <div class="text-center">
            <a class="btn btn-danger" asp-page-handler="Logout" asp-page="/Login">Back to login</a>
        </div>
    }
    else
    {
        <h1 class="text-info text-center">DELETE ORDER DETAIL</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDetail.UnitPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDetail.UnitPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDetail.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDetail.Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDetail.Order)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDetail.Order.OrderId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDetail.Product)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderDetail.Product.ProductName)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="OrderDetail.OrderId" />
